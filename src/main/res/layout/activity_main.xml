<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.proj5_fedcash.MainActivity"
   >



    <Spinner
    android:id="@+id/spinner1"
    android:layout_width="368dp"
    android:layout_height="wrap_content"
      />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
      android:paddingTop="40dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Enter Date"
        android:text="Format:DD/MM/YYYY"
        android:visibility="gone"
        android:focusable="false"
        android:clickable="true"/>
    <EditText
        android:id="@+id/editText2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Enter Year"
       android:visibility="gone"/>
    <EditText
        android:id="@+id/editText3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Enter Working Days"
        android:visibility="gone"/>
    <Button
        android:id="@+id/button"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:text="@string/get_new_id_string" />

    <Button
        android:id="@+id/button1"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Unbind from Service" />
    <TextView
        android:id="@+id/labeloutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_id_string"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="1dp"
        android:lines="2"
        android:textSize="24sp" />

    <Button
        android:id="@+id/go_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Go To Activity 2"
        android:textSize="28sp" />
</LinearLayout>
</ScrollView>